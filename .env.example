# Copy to .env.local and fill in values
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=some-long-random-secret

# Google OAuth credentials (create in Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple (optional) - set these if you want Sign in with Apple to work
APPLE_CLIENT_ID=your.apple.client.id
APPLE_CLIENT_SECRET=your-apple-client-secret

# Gmail settings for sending welcome emails
GMAIL_USER=kdbburns.social@gmail.com
# For Gmail, generate an App Password and set it here (recommended)
GMAIL_APP_PASSWORD=your-gmail-app-password

# Business name to display in welcome email
BUSINESS_NAME=Business Name
